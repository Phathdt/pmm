{
  "name": "optimex-pmm",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@apps/api-server",
    "build": "turbo run build",
    "build:prod": "turbo run build:prod",
    "test": "turbo run test",
    "test:ci": "turbo run test --filter='./libs/*' -- --ci --coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "clean": "rm -rf dist .turbo node_modules",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "ctix": "node generate-indexes.js",
    "prepare": "husky",
    "commit": "git-cz",
    "check:unused": "node unused-detector.js",
    "check:unused:ci": "node unused-detector.js --exit-code",
    "sync:deps": "npx ts-node scripts/sync-package-deps.ts",
    "sync:deps:dry": "npx ts-node scripts/sync-package-deps.ts --dry-run",
    "sync:deps:strict": "npx ts-node scripts/sync-package-deps.ts --strict --check-versions"
  },
  "resolutions": {
    "@bull-board/express/express": "5.0.1",
    "uuid": "^11.1.0",
    "@solana/web3.js": "^1.98.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "~24.10.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "git-cz": "^4.9.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "6.7.0",
    "rolldown": "^1.0.0-beta.53",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.2",
    "turbo": "^2.6.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@oxc-project/runtime": "^0.101.0",
    "@prisma/client": "6.7.0",
    "bigint-buffer": "^1.1.5",
    "pino-pretty": "^13.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  }
}
