# App Environment - determines which YAML config file to load (local.yaml, staging.yaml, production.yaml)
APP_ENV=local

# Prisma Engine (only needed for NixOS)
# PRISMA_QUERY_ENGINE_LIBRARY=/path/to/libquery_engine.node

# Host Configuration
HOST__PORT=3000

# Database Configuration
DATABASE__URL=postgresql://postgres:password@localhost:5432/bitfi-pmm

# Redis Configuration
REDIS__URL=redis://127.0.0.1:6379

# Logging Configuration
LOG__LEVEL=debug
LOG__ENABLE_JSON_FORMAT=false

# PMM Configuration
PMM__ID=your-pmm-id
PMM__PRIVATE_KEY=your-pmm-private-key

# PMM EVM Configuration
PMM__EVM__RPC_URL=https://your-evm-rpc-url
PMM__EVM__PRIVATE_KEY=your-evm-private-key
PMM__EVM__ADDRESS=0xYourEvmAddress

# PMM BTC Configuration
PMM__BTC__PRIVATE_KEY=your-btc-private-key-wif
PMM__BTC__ADDRESS=your-btc-address
PMM__BTC__MAX_FEE_RATE=5

# PMM Solana Configuration
PMM__SOLANA__RPC_URL=https://your-solana-rpc-url
PMM__SOLANA__PRIVATE_KEY=your-solana-private-key-base58
PMM__SOLANA__ADDRESS=YourSolanaAddress

# Trade Configuration
TRADE__MIN=10
TRADE__MAX=300
TRADE__SOFT_CAP=300
TRADE__HARD_CAP=1000
TRADE__COMMITMENT_BPS=9000
TRADE__INDICATIVE_BPS=9000
TRADE__ONLY_SOLANA=false
TRADE__MIN_BALANCE_USD=1000

# Quote Configuration
QUOTE__SESSION_TIMEOUT=86400000

# IP Whitelist Configuration
IP_WHITELIST__ENABLED=false
IP_WHITELIST__LIST=127.0.0.1,::1

# Telegram Configuration
TELEGRAM__BOT_TOKEN=your-telegram-bot-token
TELEGRAM__CHAT_ID=your-telegram-chat-id
TELEGRAM__BASE_URL=https://api.telegram.org
TELEGRAM__TIMEOUT=10000

# Testing Configuration
TESTING__STUCK_TRANSACTIONS=false

# Environment (development/staging/production for SDK)
ENV=development
